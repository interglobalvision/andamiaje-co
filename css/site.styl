@import 'kouto-swiss'
@import 'helpers'

// ******************************************************

// RESETS

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// GRID

@import 'grid'

// ******************************************************

// TYPOGRAPHY

@import 'type'

// ******************************************************

// VARIABLES

$color-black = rgb(0, 0, 0)
$color-white = rgb(255, 255, 255)
$color-grey = rgb(216, 216, 216)
$color-grey-dark = rgb(130, 130, 130)
$color-blue = lightblue

// ******************************************************

// BASIC

html
  background-color: $color-white
  color: $color-black

img
  max-width: 100%
  height: auto

.mobile-only
  display: initial !important

.desktop-only
  display: none !important

.color-grey-dark
  color: $color-grey-dark

.border-top
  border-top: $color-grey solid 1px

input[type="text"], input[type="email"]
  appearance: none
  border: 0
  border-bottom: $color-grey-dark solid 1px
  font-weight: normal
  width: 100%
  &::placeholder
    color: $color-grey
    font-weight: normal
  &:focus
    outline: none
    border-bottom-color: $color-blue

button
  appearance: none
  border: 0
  background: transparent
  &:focus
    outline: none
    #chevron
      border-color: $color-blue

// ******************************************************

// MEDIA QUERIES

$gutter = 14px

$margin-micro = ($gutter / 3)
$margin-tiny = ($gutter / 2)
$margin-small = ($gutter)
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 16px
$font-size-small = 14px
$font-size-tiny = 11px
$font-size-micro = 8px

grid(96%, $gutter, s)

space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

font-sizes($font-size-basic, false, false, false, $font-size-small, $font-size-tiny, $font-size-micro)

@import 'responsive/mobile'

@media screen and (min-width: 720px)

  $gutter = 21px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  $font-size-basic = 18px
  $font-size-small = 16px
  $font-size-tiny = 12px
  $font-size-micro = 9px

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  grid(680px, $gutter, m)

  font-sizes($font-size-basic, false, false, false, $font-size-small, $font-size-tiny, $font-size-micro)

  .mobile-only
    display: none !important

  @import 'responsive/tablet'

@media screen and (min-width: 1024px)

  $gutter = 24px

  $margin-micro = ($gutter / 3)
  $margin-tiny = ($gutter / 2)
  $margin-small = ($gutter)
  $margin-basic = ($gutter * 2)
  $margin-mid = ($gutter * 3.5)
  $margin-large = ($gutter * 5)

  grid(1000px, $gutter, l)

  space-maker($margin-micro, $margin-tiny, $margin-small, $margin-basic, $margin-mid, $margin-large)

  .desktop-only
    display: initial !important

  @import 'responsive/desktop'

@media screen and (min-width: 1280px)

  $font-size-basic = 21px
  $font-size-small = 18px
  $font-size-tiny = 14px
  $font-size-micro = 11px

  grid(1200px)

  font-sizes($font-size-basic, false, false, false, $font-size-small, $font-size-tiny, $font-size-micro)

@media screen and (min-width: 1366px)

  $gutter = 30px

  grid(1300px, $gutter, l)

